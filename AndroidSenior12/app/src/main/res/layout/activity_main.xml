<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttp3 发送同步请求（GET）"
        android:onClick="getSync" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttp3 发送异步请求（GET）"
        android:onClick="getAsync" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入账号"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttp3 发送异步请求（GET带参数）"
        android:onClick="getAsyncParam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttp3 发送异步请求（POST）"
        android:onClick="postAsync" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义封装"
        android:onClick="myOkHttp" />

</LinearLayout>